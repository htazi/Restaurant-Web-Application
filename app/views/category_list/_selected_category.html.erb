<table>
    <strong>Displaying: <%= category.name %></strong>
    <% category.food_items.each do |food_item| %>
      <tr>
        <td><%= food_item.name %></td>
        <td>$<%= food_item.price %></td>
        <td><%= link_to 'Add To Order', create_order_path(@category, :id => @category.id), class: 'btn btn-primary'%></td>
      </tr>
    <% end %>
</table>